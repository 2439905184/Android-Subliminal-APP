<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/easy_back"
    tools:context="zyia.alarm.zyia.zyia.EasyAlarm">

    <ImageView
        android:contentDescription="@string/top_layer"
        android:id="@+id/top_layer_Easy_alarm"
        android:layout_width="fill_parent"
        android:src="@drawable/top_bar"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content" />

    <ImageButton
        android:background="@drawable/easy_dismiss"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:onClick="alarmClose"
        android:layout_height="wrap_content" />

</RelativeLayout>
