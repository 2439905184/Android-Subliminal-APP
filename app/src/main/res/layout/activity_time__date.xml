<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#7bf5fd"
    tools:context="zyia.alarm.zyia.zyia.Time_Date">

    <Button
        android:text="DISMISS"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:id="@+id/dismiss"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:onClick="dismissButton"

        android:background="@drawable/dismisser"
        android:layout_centerInParent="true"

        android:layout_width="200dp"
        android:layout_height="100dp" />

    <Button
        android:id="@+id/snoozeAlarm1"
        android:text="SNOOZE"
        android:textSize="25sp"
        android:layout_below="@+id/dismiss"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/snooze_g"
        android:onClick="snoozeup"
        android:layout_width="175dp"
        android:layout_height="80dp" />






</RelativeLayout>
